.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for('images/logo@2x.png') alt="科技聚变 Logo")
      h3(title="")
        a(href="/")= config.title
      if theme.description
        .description
          p= theme.description

  ul.social-links
   if theme.email
      li
        a(href="mailto:" + theme.email)
          i.fa.fa-envelope
    if theme.twitter
      li
        a(href="https://twitter.com/" + theme.twitter)
          i.fa.fa-twitter
    if theme.instagram
      li
        a(href="http://instagram.com/" + theme.instagram)
          i.fa.fa-instagram
    if theme.weibo
      li
        a(href="http://weibo.com/" + theme.weibo)
          i.fa.fa-weibo
    if theme.iTunes
      li
        a(href="https://itunes.apple.com/cn/podcast/id" + theme.iTunes)
          i.fa.fa-apple
    if theme.rss
      li
        a(href= url_for(theme.rss))
          i.fa.fa-rss   
  include footer
